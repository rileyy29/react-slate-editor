{
    "compilerOptions": {
      "declaration": true,
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "outDir": "dist",
      "rootDir": "src",
      "typeRoots": [
        "node_modules/@types",
        "@types"
      ]
    },
    "include": [
      "**/*.ts",
      "**/*.tsx",
      "scripts/rollup-purge.js"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }